{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "version": "0.0.0",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "yarn build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "build:types": "echo '📦 Building server types...' && tsc --build tsconfig.build.json --verbose",
    "check:lint": "eslint . --ext .ts && prettier --check \"src/**/*.{ts,js,json,md,yml,yaml}\" && echo 🚨✅ Lint check passed!",
    "check:types": "tsc -p tsconfig.typecheck.json && echo 🧠✅ Type check passed!",
    "fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "check:knip": "knip && echo ✂️✅ Unused code check passed!",
    "check:dep": "depcheck && echo 📦✅ Dependency check passed!",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "check:test": "vitest run  && echo 🧪✅ Tests passed! || (echo '❌ Fix the above issues before committing 💡' && exit 1)",
    "check:all": "yarn check:lint && yarn check:types && yarn check:knip && yarn check:dep && yarn build:types && yarn build && echo 🧰✨ All checks passed! || (echo '❌ Fix the above issues before committing 💡' && exit 1)"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "better-auth": "^1.3.24",
    "cfonts": "^3.3.1",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.3.3",
    "pg": "^8.14.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "superjson": "^2.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.10",
    "@eslint/js": "^9.35.0",
    "@eslint/json": "^0.13.2",
    "@scalar/fastify-api-reference": "^1.34.2",
    "@types/eslint-plugin-security": "^3",
    "@types/node": "^24.3.1",
    "@types/pg": "^8.11.11",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "depcheck": "^1.4.7",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.35.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.21.3",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.4.0",
    "knip": "^5.63.1",
    "prettier": "^3.5.3",
    "trpc-to-openapi": "^3.0.1",
    "tsdown": "^0.14.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0",
    "zod-openapi": "^5.3.1"
  },
  "packageManager": "yarn@4.9.2"
}
